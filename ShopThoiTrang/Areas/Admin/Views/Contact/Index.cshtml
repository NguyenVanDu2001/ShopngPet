@model IEnumerable<ShopThoiTrang.Models.Mcontact>

@{
    ViewBag.Title = "Contact";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues"> Quản lý liên hệ</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang chủ</a></li>
                <li class="breadcrumb-item active m-0">  Quản lý liên hệ</li>
            </ol>
        </div>
    </div>
</div>

<section class=" ">
    <div class=" bg-white card p-3 ">

        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-3 ">
                <div class=" pt-1 ml-5">
                    <a class="text-white btn-sm btn-danger " href="~/admin/Contact/trash">Trash<i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-12 p-3">
                <table id="myTable1" class="table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Tên đầy đủ  </th>
                            <th>Số điện thoại</th>
                            <th>tiêu đề</th>
                            <th>Ngày tạo</th>
                            <th>Tùy chọn</th>
                            <th>ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string title = item.title;
                            <tr>

                                <td> @Html.DisplayFor(modelItem => item.fullname)</td>
                                <td> @Html.DisplayFor(modelItem => item.phone)</td>
                                <td>
                                    <a class="card-link " href="@Url.Action("Details", "contact", new { id = item.ID })">
                                        @if (title.Length > 100)
                                        {@title.Substring(0, 30)}
                                    else
                                    { @title}
                                    </a>

                                </td>
                                <td>@Html.DisplayFor(modelItem => item.created_at)</td>
                                <td>
                                    @if (item.status == 1)
                                    {
                                        <a class="btn btn-sm btn-light border a33 text-success" href="@Url.Action("Status", "contact", new { id = item.ID })"> <i class="fas fa-toggle-on"></i> </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-light border a33 text-danger" href="@Url.Action("Status", "contact", new { id = item.ID })"> <i class="fas fa-toggle-off"></i> </a>
                                    }
                                    <a class="btn btn-sm btn-light border text-danger" href="@Url.Action("Deltrash", "contact", new { id = item.ID })"> <i class="fas fa-trash-alt"></i></a>

                                </td>
                                <td class="text-cam pt-4">@Html.DisplayFor(modelItem => item.ID)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script>
    $("#contact").addClass("active");
</script>

