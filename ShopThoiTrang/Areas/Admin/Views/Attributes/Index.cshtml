@model IEnumerable<ShopThoiTrang.Models.Attribute>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 ">
            <h5 class="pl-2 mt-2 text-blues">
                Quản lý danh mục thuộc tính
            </h5>
        </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang chủ</a></li>
                <li class="breadcrumb-item active m-0">Quản lý thuộc tính</li>
            </ol>
        </div>
    </div>
</div>


<section class=" ">
    <div class=" bg-white card p-3 ">

        <div class="row">
            <div class="col-md-6 w-60 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-6 ">
                <div class=" pt-1 ml-6 float-right">
                    <a class="text-white btn-sm btn-success" href="~/admin/Attributes/Create">Thêm mới danh mục thuộc tính <i class="fas fa-plus"></i></a>
                    <a class="text-white btn-sm btn-danger " href="~/admin/Attributes/trash">Giỏ hàng<i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Tên thuộc tính</th>
                            <th>Giá trị thuộc tính</th>
                            <th>Kiểu thuộc tính</th>
                            <th>Ngày tạo</th>
                            <th>Tùy chọn</th>
                            <th>ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td><a class="text-cam font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.Name)</a></td>
                                <td><a class="text-cam font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.Value)</a></td>
                                <td><a class="text-cam font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.Type)</a></td>
                                <td style="font-size:15px;">@Html.DisplayFor(modelItem => item.created_at)</td>
                                <td>
                                 

                                    <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("Delete", "Attribute", new { id = item.Id })"> <i class="fas fa-trash-alt"></i></a>
                                    <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Create", "Attributes", new { id = item.Id })">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                                <td class="text-cam pt-4">@Html.DisplayFor(modelItem => item.Id)</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>


