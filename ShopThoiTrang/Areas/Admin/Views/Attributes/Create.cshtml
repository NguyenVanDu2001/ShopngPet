@model ShopThoiTrang.Models.Attribute
@using ShopThoiTrang.Common
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Thêm mới danh mục thuộc tính</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang chủ</a></li>
                <li class="breadcrumb-item active m-0">Quản lý thuộc tính</li>
            </ol>
        </div>
    </div>
</div>


<section class=" pt-2 card  ">
    @Html.Partial("_MessgeAlert")
    <div class="bg-white p-4 ">


        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()
            <div class=" row ">
                <div class="col-md-4">  <h3 class=" font-weight-bold text-danger "> Thêm mới danh mục sản phẩm</h3>  </div>
                <div class="col-md-4"></div>
                <div class="col-md-4 ">
                    <div class="float-right">
                        <button class="btn btn-sm bg-success text-white"><i class="far fa-save"></i> Lưu lại</button>
                        <a href="~/admin/Attributes" class="btn btn-sm bg-danger text-white"><i class="far fa-window-close"></i> Bỏ qua</a>
                    </div>
                </div>
            </div>
            <div class=" row ">
                <div class="col-md-8">
                    <div>
                        <label for="psw"><span class="text-secondary ">Tên thuộc tính</span></label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <label>Màu sắc </label>
                        <input type="checkbox" name="Color" value="" />
                    </div>
                    <div>
                        <label for="psw"><span class="text-secondary ">Giá trị thuộc tính</span></label>
                        @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control valueText" } })
                        @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })

                    <input type="color" name="Value" class="form-control" value="" />
                    </div>
                    <div>
                        <label for="psw"><span class="text-secondary ">Kiểu thuộc tính</span></label>
                        @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <label for="psw"><span class="text-secondary ">Trạng thái thuộc tính</span></label>
                        <select class="form-control" name="status">

                            <option value="">Chọn trạng thái</option>
                            <option value="1">Hoạt động</option>
                            <option value="0">Dừng hoạt động</option>
                        </select>
                        <select class="form-control" name="status">
                            @foreach (var item in Enum.GetValues(typeof(EnumAttributeHelper)))
                            {
                                <option value="@item">@(EnumHelpers.GetDescriptionFromEnumValue(Enum.GetName(EnumAttributeHelper, item)))</option>
                            }
                            <option value="">Chọn trạng thái</option>
                            <option value="1">Hoạt động</option>
                            <option value="0">Dừng hoạt động</option>
                        </select>


                    </div>
                </div>

            </div>
        }
    </div>
</section>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script>
    $("input[type=color]").hide();
    $("input[name=Color]").on("change", function(){
        let _$this = $(this);
        if (_$this.is(":checked")) {
            $("input[type=color]").show();
            $(".valueText").attr("name", "text").hide();
            //$(".valueText").hide();
        } else {

            $("input[type=color]").hide();
            $(".valueText").attr("name", "Value").show();
        }
    });
</script>

