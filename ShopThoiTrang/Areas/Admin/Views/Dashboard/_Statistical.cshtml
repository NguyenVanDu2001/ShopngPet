@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{

    var user = ViewBag.User;
}
<!-- Content Wrapper. Contains page content -->

<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Số liệu thống kê</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang chủ</a></li>
                <li class="breadcrumb-item active m-0">Thống Kê</li>
            </ol>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid card">
        <div class="row bg-white p-2">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title font-weight-bold">Thống kê Đơn hàng</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Thời gian</th>

                                    <th style="width: 100px">Đã Bán</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1.</td>
                                    <td>Hôm nay</td>

                                    <td><span class="badge bg-success text-white">@ViewBag.OrderToday Đơn</span></td>
                                </tr>
                            
                                
                        </table>
                    </div>

                </div>

            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title font-weight-bold">Thống kê Doanh thu</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Thời gian</th>
                                    <th style="width: 100px">Đã Bán</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1.</td>
                                    <td>Hôm nay</td>

                                    <td><span class="badge bg-success text-white">@ViewBag.sumOrder.ToString("N0") đ</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        
        </div>
        </div>
</section>
