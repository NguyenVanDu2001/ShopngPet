
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}
<link href="~/Public/dist/css/adminlte.min.css" rel="stylesheet" />
    <div class="content-header ">
        <div class="container-fluid ">
            <div class="row mb-2 bg-white p-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Trang chủ</h1>
                </div><!-- /.col -->
                <div class="col-sm-6 ">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
   

    <section class="content">
        <div class="container-fluid">
            <h5 class="mb-2">Thông tin chung</h5>
            <div class="row">
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="info-box">
                        <span class="info-box-icon bg-info"><i class="nav-icon fas fa-chart-pie"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Tất cả sản phẩm</span>
                            <span class="info-box-number">@ViewBag.product</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>
                <!-- /.col -->
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="info-box">
                        <span class="info-box-icon bg-success"><i class="fas fa-shopping-basket"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Đơn hàng</span>
                            <span class="info-box-number">@ViewBag.Neworder</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>
                <!-- /.col -->
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="info-box">
                        <span class="info-box-icon bg-warning "><i class="fas fa-users text-white"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Người dùng</span>
                            <span class="info-box-number">@ViewBag.user</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>
                <!-- /.col -->
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="info-box">
                        <span class="info-box-icon bg-danger"><i class="fas fa-file-signature"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">Liên hệ</span>
                            <span class="info-box-number">@ViewBag.contact</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Main content -->
         
        </div>
    </section>
