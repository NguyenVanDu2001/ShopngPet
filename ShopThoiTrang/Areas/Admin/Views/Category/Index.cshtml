@model IEnumerable<ShopThoiTrang.Models.Mcategory>
@using ShopThoiTrang.Helper
@{
    /**/

    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues"> Quản lý danh mục sản phẩm
</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang chủ</a></li>
                <li class="breadcrumb-item active m-0">Quản lý danh mục sản phẩm</li>
            </ol>
        </div>
    </div>
</div>

<section class=" ">
    <div class=" bg-white card p-3 ">

        <div class="row">
            <div class="col-md-6 w-60 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-6 ">
                <div class=" pt-1 ml-6 float-right">
                    <a class="text-white btn-sm btn-success" href="~/admin/category/Create">Thêm mới danh mục sản phẩm <i class="fas fa-plus"></i></a>
                    <a class="text-white btn-sm btn-danger " href="~/admin/category/trash">Giỏ hàng<i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên danh mục sản phẩm</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td class="text-cam pt-4">@Html.DisplayFor(modelItem => item.ID)</td>
                                <td><a class="text-cam font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.name)</a></td>
                                <td style="font-size:15px;">@item.created_at.ToString()</td> 
                                <td style="font-size:15px;">@(item.status == 1? "Hoạt động" : "Tắt")</td>
                                <td>
                                    @if (item.status == 1)
                                    {
                                        <a class="btn btn-sm btn-light text-success border a33" href="@Url.Action("Status", "Category", new { id = item.ID })"> <i class="fas fa-toggle-on"></i> </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-light text-danger border a33" href="@Url.Action("Status", "Category", new { id = item.ID })"> <i class="fas fa-toggle-off"></i> </a>
                                    }

                                    <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("Deltrash", "Category", new { id = item.ID })"> <i class="fas fa-trash-alt"></i></a>
                                    <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Edit", "Category", new { id = item.ID })">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>

<script>
    $("#category").addClass("active");
</script>

