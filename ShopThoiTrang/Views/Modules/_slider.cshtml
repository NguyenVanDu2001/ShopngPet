@model IEnumerable<ShopThoiTrang.Models.Mslider>
<div class="slider-area">
    <div class="slider-active owl-carousel nav-style-1">
        @foreach (var item in Model)
        {
            <div class="w-100 single-slider-2 slider-height-2 d-flex align-items-center bg-img " style="background-image:url(public/images/bg-images/@item.img);">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-6 col-lg-7 col-md-8 col-12 ml-auto">
                            <div class="slider-content-3 slider-animated-1 text-center">
                                <h3 class="animated">WEB STORE</h3>
                                <h1 class="animated">SELLER 5THEWAY</h1>
                                
                                <div class="slider-btn btn-hover">
                                    <a class="animated" href="~/product">shop now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }

    </div>
</div>