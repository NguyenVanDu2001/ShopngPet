
@{
    ViewBag.Title = "contact";
    Layout = "~/Views/Shared/_layoutSite.cshtml";
}
<div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="index.html">Trang chủ</a>
                </li>
                <li class="active">Liên hệ với chúng tôi</li>
            </ul>
        </div>
    </div>
</div>
<div class="contact-area pt-100 pb-100">
    <div class="container">
        <div class="contact-map mb-10">
            <div id="map"><iframe class="w-100" height="500px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3723.6574756110217!2d105.78126221424561!3d21.046386992553753!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab3b4220c2bd%3A0x1c9e359e2a4f618c!2sB%C3%A1ch%20Khoa%20Aptech!5e0!3m2!1svi!2s!4v1630717094157!5m2!1svi!2s"  frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe></div>
        </div>
        <div class="custom-row-2">
            <div class="col-lg-4 col-md-5" >
                <div class="contact-info-wrap" style="padding-bottom: 140px;">
                    <div class="single-contact-info">
                        <div class="contact-icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="contact-info-dec">
                            <p>035-726-6341</p>
                            
                        </div>
                    </div>
                    <div class="single-contact-info">
                        <div class="contact-icon">
                            <i class="fa fa-globe"></i>
                        </div>
                        <div class="contact-info-dec">
                            <p><a href="#">mrlouispham99@mail.com</a></p>
                            
                        </div>
                    </div>
                    <div class="single-contact-info">
                        <div class="contact-icon">
                            <i class="fa fa-map-marker"></i>
                        </div>
                        <div class="contact-info-dec">
                            <p>new york </p>
                            
                        </div>
                    </div>
                    <div class="contact-social text-center">
                        <h3>Theo dõi chúng tôi</h3>
                     
                            <ul>
                                <li><a href="https://www.facebook.com/hello"><i class=" fab fa-facebook-square"></i> Facebook</a></li>
                                <li><a href="https://www.instagram.com/seller.5theway"><i class="fab fa-twitter-square"></i> Twitter</a></li>
                                <li><a href="https://www.instagram.com/seller.5theway"><i class="fab fa-instagram-square"></i> Instagram</a></li>
                                <li><a href="https://www.instagram.com/seller.5theway"><i class="fab fa-youtube"></i> Youtube</a></li>
                            </ul>
                     
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-7">
                @Html.Partial("_MessgeAlert")
                <div class="contact-form">
                    <div class="contact-title mb-30">
                        <h2>Về chúng tôi</h2>
                    </div>
                    <form class="contact-form-style" id="contact-form" action="" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <input name="fullname" placeholder="Full name*" type="text" required>
                            </div>
                            <div class="col-lg-6">
                                <input name="email" placeholder="Email address*" type="email" required>
                            </div>
                            <div class="col-lg-12">
                                <input name="phone" placeholder="Phone number*" type="tel" required>
                            </div>
                            <div class="col-lg-12">
                                <input name="title" placeholder="Title*" type="text" required>
                            </div>
                            <div class="col-lg-12">
                                <textarea name="detail" placeholder="Message*" required></textarea>
                                <button class="submit" type="submit">Gửi yêu cầu</button>
                            </div>
                        </div>
                    </form>
                    <p class="form-messege"></p>
                </div>
            </div>
        </div>
    </div>
</div>