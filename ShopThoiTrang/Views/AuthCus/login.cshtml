
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_layoutSite.cshtml";
}
<div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="~/">Trang chủ</a>
                </li>
                <li class="~/dang-nhap">Đăng nhập / &nbsp; Đăng ký</li>
            </ul>
        </div>
    </div>
</div>
<div class="login-register-area pt-100 pb-100">
    <div class="container">
        <div class="row">
            @Html.Partial("_MessgeAlert")
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-toggle="tab" href="#lg1">
                            <h4> Đăng nhập </h4>
                        </a>
                        <a data-toggle="tab" href="#lg2">
                            <h4> Đăng ký </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form action="AuthCus/LoginOrRegister" method="POST">
                                        <input type="hidden" name="typeName" value="login" />
                                        <input type="text" name="uname" placeholder="Username">
                                        <input type="password" name="psw" placeholder="Password">
                                        <a href="./quen-mat-khau" id="forget_pwd">Quên mật khẩu</a>
                                        <div class="button-box">
                                            <button type="submit"><span>Login</span></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div id="lg2" class="tab-pane">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form action="#" method="post">
                                        <input type="hidden" name="typeName" value="register" />
                                        <input type="text" placeholder="Username" name="uname" required>
                                        <input type="text" placeholder="Fullname" name="fname" required>
                                        <input type="email" id="email" name="email" placeholder="Your Email" required>
                                        <input type="tel" name="phone" placeholder="Phone number" required>
                                        <input type="text" name="address" placeholder="Address" required>
                                        <input type="password" name="psw" id="password" placeholder="Password" required>
                                        <input type="password" id="repeat-password" name="repsw" placeholder="Password" required>
                                        <div class="button-box">
                                            <button type="submit"><span>Register</span></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>